{
  "builds": [
    {
      "path": ".",
      "name": "lib:base"
    }
  ],
  "nodes": {
    "lib:base": {
      "image": "lib:base"
    }
  },
  "steps": [
    {
      "type": "docker",
      "node": "lib:base",
      "commit": "lib:provision",
      "exec": {
        "type": "bash",
        "path": "bundle install"
      }
    },
    {
      "type": "docker",
      "node": "lib:provision",
      "exec": {
        "type": "bash",
        "path": "bundle exec rake"
      }
    }
  ]
}
