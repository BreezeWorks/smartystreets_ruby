{
  "builds": [
    {
      "name": "lib:base",
      "path": "."
    }
  ],
  "nodes": [
    {
      "name": "lib:base",
      "image": "lib:base"
    }
  ],
  "steps": [
    {
      "name": "provision",
      "type": "docker",
      "node": {
        "name": "lib:base"
      }
      "commit": "lib:provision",
      "exec": {
        "type": "bash",
        "path": "bundle install"
      }
    },
    {
      "name": "test",
      "type": "docker",
      "node": {
        "name": "lib:provision"
      },
      "exec": {
        "type": "bash",
        "path": "bundle exec rake"
      }
    }
  ]
}
